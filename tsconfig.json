{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",                               
    "module": "commonjs",                           
    "outDir": "./dist",                             
    "rootDir": "./src",                             
    "strict": true,
    "baseUrl": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true, // required for Decorators
    "emitDecoratorMetadata": true,  // required for Decorators    
  },
  "lib": ["es2015"],
  "include": [
    "./src/"
, "tsconfig.json"  ],
  "exclude": [
    "../wwwroot/app",
    "node_modules/*"
  ]
}